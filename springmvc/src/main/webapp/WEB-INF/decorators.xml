<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/WEB-INF/layouts/">
	<excludes>
		<pattern>/static/*</pattern>
		<pattern>/cxf/*</pattern>
		<pattern>/api/*</pattern>
		<pattern>/javasimon/*</pattern>
	</excludes>
	
    <!-- 上边配置了defaultdir,会到这里边找default.jsp -->
	<decorator name="default" page="default.jsp">
		<pattern>/*</pattern>
	</decorator>
</decorators>